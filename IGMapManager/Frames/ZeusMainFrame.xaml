<Page x:Class="IGMapManager.Frames.ZeusMainFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IGMapManager.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZeusMainFrame">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="BtnZeusSave" Height="80" Width="80" Click="BtnZeusSave_Click">Savegames</Button>
            <Button x:Name="BtnZeusAdventure" Height="80" Width="80" Click="BtnZeusAdventure_Click">Adventures</Button>
        </WrapPanel>

        <Frame x:Name="ZeusFrame" Grid.Column="2" Grid.Row="1"></Frame>
    </Grid>
</Page>
